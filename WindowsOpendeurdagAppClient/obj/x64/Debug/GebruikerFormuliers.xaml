<Page
    x:Class="WindowsOpendeurdagAppClient.GebruikerFormuliers"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <VisualStateManager.VisualStateGroups>
            <VisualStateGroup x:ConnectionId='1' x:Name="VisualStateGroup">
                <VisualState x:ConnectionId='2' x:Name="VisualStateMobile">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="0"></AdaptiveTrigger>
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                            <Setter Target="home.Source" Value="Assets/Phone/HogentLogoMobile.png"></Setter>
                        </VisualState.Setters>
                </VisualState>

                <VisualState x:ConnectionId='3' x:Name="VisualStateTablet">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="600"></AdaptiveTrigger>
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="home.Source" Value="Assets/Tablet/HogentLogoTablet.png"></Setter>
                    </VisualState.Setters>
                </VisualState>

                <VisualState x:ConnectionId='4' x:Name="VisualStateDesktop">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="800"></AdaptiveTrigger>
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="home.Source" Value="Assets/Desktop/HogentLogo.png"></Setter>
                    </VisualState.Setters>
                </VisualState>
            </VisualStateGroup>

        </VisualStateManager.VisualStateGroups>
        <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <StackPanel Orientation="Vertical" Padding="5">
            <Border BorderBrush="Black" BorderThickness="2" Background="#c9dced">
                <Image x:ConnectionId='15' x:Name="home" Source="Assets/Phone/HogentLogoMobile.png" Stretch="None" HorizontalAlignment="Left"                     ></Image>
            </Border>
           
            <StackPanel Orientation="Vertical">
                    <TextBlock Text="Gegevens" FontSize="22" HorizontalAlignment="Center"></TextBlock>
                    <TextBlock TextWrapping="Wrap" Text="Interesse in een van onze opleidingen? Laat dan gerust hier uw gegevens achter." Padding="10" HorizontalAlignment="Center"></TextBlock>

                    <Border BorderBrush="Black" BorderThickness="2" Background="#c9dced">

                    <StackPanel Orientation="Vertical" Padding="5">
                        <StackPanel Orientation="Horizontal" Padding="5" HorizontalAlignment="Center">
                            <TextBlock Text="Voornaam" Padding="5"></TextBlock>
                            <TextBox x:ConnectionId='14' x:Name="voornaam" PlaceholderText="Geef hier uw voornaam in"></TextBox>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Padding="5" HorizontalAlignment="Center">
                            <TextBlock Text="Achternaam" Padding="5"></TextBlock>
                            <TextBox x:ConnectionId='13' x:Name="achternaam" PlaceholderText="Geef hier uw achternaam in"></TextBox>
                        </StackPanel>
                            <StackPanel Orientation="Horizontal" Padding="5" HorizontalAlignment="Center">
                                <TextBlock Text="Geboortedatum" Padding="5"></TextBlock>
                            <DatePicker x:ConnectionId='12' x:Name="geboortedatum"></DatePicker>
                        </StackPanel>
                            <StackPanel Orientation="Horizontal" Padding="5" HorizontalAlignment="Center">
                                <TextBlock Text="Adres" Padding="5"></TextBlock>
                            <TextBox x:ConnectionId='11' x:Name="adres" PlaceholderText="Straatnaam en nr" InputScope="EmailNameOrAddress"></TextBox>
                        </StackPanel>
                            <StackPanel Orientation="Horizontal" Padding="5" HorizontalAlignment="Center">
                                <TextBlock Text="Email" Padding="5"></TextBlock>
                            <TextBox x:ConnectionId='10' x:Name="email" PlaceholderText="example@gmail.com" InputScope="EmailNameOrAddress"></TextBox>
                        </StackPanel>

                            <StackPanel Orientation="Horizontal" Padding="5" HorizontalAlignment="Center">
                                <TextBlock Text="Gsm nummer" Padding="5"></TextBlock>
                            <TextBox x:ConnectionId='9' x:Name="gsmnummer" PlaceholderText="0477777777" InputScope="Number"></TextBox>
                        </StackPanel>

                            <StackPanel Orientation="Horizontal" Padding="5" HorizontalAlignment="Center">
                                <TextBlock Text="Opleiding" Padding="5"></TextBlock>
                                <ComboBox x:ConnectionId='8' x:Name="opleiding" SelectedIndex="0">
                                    <x:String>Bedrijfsmanagement</x:String>
                                    <x:String>Officemanagement</x:String>
                                    <x:String>Retailmanagement</x:String>
                                    <x:String>Toegepaste Informatica</x:String>
                                </ComboBox>
                            </StackPanel>
                        
                            <StackPanel Orientation="Horizontal" Padding="5" HorizontalAlignment="Center">
                                <TextBlock Text="Campus" Padding="5"></TextBlock>
                                <ComboBox x:ConnectionId='7' x:Name="campus" SelectedIndex="0">
                                    <x:String>Aalst</x:String>
                                    <x:String>Bijloke</x:String>
                                    <x:String>Mercator</x:String>
                                    <x:String>Ledeganck</x:String>
                                    <x:String>Melle</x:String>
                                    <x:String>Grote Sikkel</x:String>
                                    <x:String>Schoonmeersen</x:String>
                                    <x:String>Vesalius</x:String>
                                </ComboBox>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Padding="5" HorizontalAlignment="Center">
                                <TextBlock x:ConnectionId='6' x:Name="error" Foreground="Red"></TextBlock>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Padding="5" HorizontalAlignment="Center">
                                <Button x:ConnectionId='5' Content="Verstuur"                      ></Button>
                            </StackPanel>
                        </StackPanel>
                       
                </Border>
            </StackPanel>
           
            <!---Opleiding/campus-->
        </StackPanel>
        
    </Grid>
    </ScrollViewer>
</Page>

